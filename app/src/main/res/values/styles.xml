<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="top_bg">
        <item name="background">@drawable/top_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">240dp</item>
    </style>

    <style name="cardview">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="container_logo">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">90dp</item>

    </style>

    <style name="logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/lbr_logo</item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="bt_login">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">@string/bt_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>
</resources>